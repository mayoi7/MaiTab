{
  "name": "MaiTab",
  "manifest_version":2,
  "version": "0.1.0",
  "icons":
  {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  },
  "description": "a ligher newtab",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts":
   [
       {
           "matches": ["*://*.baidu.com/*"],
           "js": ["lib/jquery-min-1.12.4.js", "js/content-script.js"],
           "run_at": "document_end"
       }
   ],
   "background":
   {
     "scripts": ["lib/jquery-min-1.12.4.js", "js/background.js"],
     "president": false
   },
   "options_ui":
   {
       "page": "html/option.html",
       "chrome_style": true
   },
   "chrome_url_overrides": {
     "newtab": "/html/newtab.html"
   }
}
